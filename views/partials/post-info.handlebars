<article class="post">
  <div class="box">
    <div class="title has-background-info">
        <a class="is-uppercase has-text-white is-size-4 ml-5" href="/post/{{id}}" target="_blank">{{title}}</a>
        <div class="meta has-text-right is-size-7">
          Posted by {{user.username}} on {{format_date created_at}}
        </div>
    </div>
    <div class="has-background-warning-light p-4">
      <p class=" is-size-5 has-text-black">{{contents}}</p> 
    </div>
  </div>
</article>