<div class="comments">
  {{#each this}}
  <section class="comment box m-2">
    <div class="meta is-size-6 has-background-info has-text-white">
        By {{user.username}} on {{format_date created_at}}
    </div>
    <div class="text has-text-black is-size-5">
      {{comment_text}}
    </div>
  </section>
  {{/each}}
</div>