<article>
  <a href="/dashboard"> &larr; Back to dashboard</a>
  <h2 class='has-text-info m-1 is-size-3'>
    Edit Post
  </h2>
  <form class="edit-post-form">
    <div class='has-text-info is-size-5 m-1'>
      <label for="post-title">Title:</label>
      <input name="post-title" type="text" value="{{post.title}}" />
    </div>
    <div class='has-text-info is-size-5 m-1'>
      <label for="post-content">Content:</label>
      <input class="textarea" name="post-content" value='{{post.contents}}' />
    </div>
    <button class='button is-info m-2' type="submit">Save post</button>
    <button type="button" class="delete-post-btn button is-info m-2">Delete post</button>
  </form>
</article>

